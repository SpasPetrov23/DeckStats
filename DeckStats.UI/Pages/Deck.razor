@page "/deck"

<PageTitle>Deck</PageTitle>

<h1>Deck</h1>

<UseGetDecks Context="result">
    <ChildContent>
        @foreach (var deck in result.Decks)
        {
            <ul>
                <li>Name: @deck.Name</li>
                <li>Wins: @deck.Wins</li>
                <li>Losses: @deck.Losses</li>
            </ul>
        }
    </ChildContent>
    <ErrorContent>
        Something went wrong ...<br />
        @result.First().Message
    </ErrorContent>
    <LoadingContent>
        Loading ...
    </LoadingContent>
</UseGetDecks>